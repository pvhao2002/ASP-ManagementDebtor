<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.title</title>
    @RenderSection("css", required: false)
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/css/style.css" />
</head>
<body>
    <header>
        <nav>
            <a href="/admin"><img id="logo" src="~/Areas/Admin/Content/images/logo_invert.png" alt="ADMIN" /></a>
            <div class="search">
                @using (Html.BeginForm("SearchByName", "AdminHome", FormMethod.Post, new {@class="frmSearch"}))
                {
                    <input type="text" name="search" placeholder="Enter name of debtor you want to search..." />
                    <input type="submit" value="" name="btnSearch"/>
                }
                <i class="bi bi-search"></i>
            </div>

            <ul class="main-menu">
                <li>Admin</li>
                <li>@Html.ActionLink("Logout", "", "")</li>
            </ul>
        </nav>

    </header>
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>


